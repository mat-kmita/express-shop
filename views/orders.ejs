<html>

<head>
    <title>Sklep - zmień swoje dane</title>
    <meta charset="utf-8" />

    <link href="/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <%- include('topbar'); %>

        <main>
            <div class="py-5 text-center">
                <h2>Historia zamówień</h2>
                <p class="lead">Przejrzyj historie swoich zamówień i zobacz szczegóły każdego z nich</p>
            </div>
            <div class="container">
                <% if(paginationModel.empty) { %>
                    <div class="alert alert-info" role="alert">
                        Nie złożyłeś jeszcze żadnych zamówień!
                    </div>
                <% } else { %>
                        <table class="table table-lg m-0">
                            <thead class="">
                                <tr>
                                    <th>Numer zamówienia</th>
                                    <th>Data zamówienia</th>
                                    <th>Kwota</th>
                                    <th>Szczegóły</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% model.data.forEach(function(order) { %>
                                    <tr>
                                        <td>
                                            <%= order.id %>
                                        </td>
                                        <td>
                                            <%= new Date(order.date).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= order.amount %>
                                        </td>
                                        <td><a href="/orders/<%= order.id %>">Szczegóły</a></td>
                                    </tr>

                                <% }); %>
                            </tbody>
                        </table>
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mt-3 mr-3">
                                <li class="page-item <%if (!paginationModel.showPreviousButton) { %> disabled <% } %>">
                                    <a class="page-link" href="/orders?page=<%= model.page - 1 %>">Poprzednie</a>
                                </li>
                                <li class="page-item <%if (!paginationModel.showNextButton) { %> disabled <% } %>">
                                    <a class="page-link" href="/orders?page=<%= model.page + 1 %>">Następne</a>
                                </li>
                            </ul>
                        </nav>
                        <% } %>
            </div>
            </div>
        </main>

        <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>